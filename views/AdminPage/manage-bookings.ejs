<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Rental Admin</title>
    <link rel="stylesheet" href="/css/Admin.css">
</head>

<body>
    <div class="dashboard">
        <%- include('../partials/side-bar.ejs') %>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header section -->
             <%- include('../partials/header.ejs') %>

            <!-- Bookings Section -->
            <section id="bookings" class="content-section">
                <h2>Manage Bookings</h2>
                
                <!-- Search Bar -->
                <div class="card">
                    <div class="search-section">
                        <input type="text" id="bookingSearchBar" placeholder="Search by user name, car model, or booking ID..." class="search-bar">
                        <button id="bookingSearchButton" class="btn primary">Search</button>
                        <button id="bookingClearSearch" class="btn secondary">Clear</button>
                    </div>
                </div>

                <div class="card">
                    <% if (bookings.length !== 0) { %>
                     <table id="bookings-table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>User</th>
                                <th>Car</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Pickup Location</th>
                                <th>Status</th>
                                <th>Total Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bookings.forEach((booking, index) => { %>
                                <tr data-booking-id="<%= booking._id %>">
                                    <td><%= index + 1 %></td>
                                    <td><%= booking.user ? `${booking.user.firstName} ${booking.user.lastName}` : 'Unknown User' %></td>
                                    <td><%= booking.car ? `${booking.car.brand} ${booking.car.model}` : 'Unknown Car' %></td>
                                    <td><%= new Date(booking.startDate).toLocaleDateString() %></td>
                                    <td><%= new Date(booking.endDate).toLocaleDateString() %></td>
                                    <td><%= booking.locationPickup %></td>
                                    <td>
                                        <span class="status <%= booking.status === 'confirmed' ? 'active' : booking.status === 'cancelled' ? 'expired' : '' %>">
                                            <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                                        </span>
                                    </td>
                                    <td>$<%= booking.totalPrice || 'N/A' %></td>
                                    <td class="actions">
                                        <button class="btn primary edit-booking" data-id="<%= booking._id %>">Edit</button>
                                        <button class="btn danger delete-booking" data-id="<%= booking._id %>">Delete</button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                     <h1>There are no bookings to show</h1>
                    <% } %>
                </div>
            </section>
        </main>
    </div>

    <!-- Edit Booking Modal -->
    <div id="edit-booking-modal" class="modal hidden">
        <div class="modal-content">
            <h3>Edit Booking</h3>
            <form id="edit-booking-form">
                <input type="hidden" id="edit-booking-id">
                
                <div class="form-group">
                    <label for="edit-booking-status">Status</label>
                    <select id="edit-booking-status" required>
                        <option value="pending">Pending</option>
                        <option value="confirmed">Confirmed</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="edit-booking-start-date">Start Date</label>
                    <input type="date" id="edit-booking-start-date" required>
                </div>
                
                <div class="form-group">
                    <label for="edit-booking-end-date">End Date</label>
                    <input type="date" id="edit-booking-end-date" required>
                </div>
                
                <div class="form-group">
                    <label for="edit-booking-pickup">Pickup Location</label>
                    <input type="text" id="edit-booking-pickup" required>
                </div>
                
                <div class="form-group">
                    <label for="edit-booking-dropoff">Dropoff Location</label>
                    <input type="text" id="edit-booking-dropoff" required>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn primary">Update Booking</button>
                    <button type="button" id="cancel-booking-edit" class="btn">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script src="/js/Admin.js"></script>
    <script src="/js/bookings.js"></script>
</body>

</html>