<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Rental Admin</title>
    <link rel="stylesheet" href="/css/Admin.css">
</head>

<body>
    <div class="dashboard">
        <%- include('../partials/side-bar.ejs') %>

            <!-- Main Content -->
            <main class="main-content">
                <!-- /////////////header section////////////// -->
                <%- include('../partials/header.ejs') %>
                    <!-- Users Section -->
                    <section id="users" class="content-section">
                        <h2>Manage Users</h2>
                        <div class="card">
                            <% if (users.length !== 0) { %>
                                <table id="users-table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>phoneNumber</th>
                                            <th>age</th>
                                            <th>country</th>
                                            <th>Gender</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach((user,index) => { %>
                                            <tr>
                                                <td><%= index+1 %></td>
                                                <td><%= user.firstName +' '+user.lastName %></td>
                                                <td><%= user.email %></td>
                                                <td><%= user.phoneNumber %></td>
                                                <td><%= user.age %></td>                                       
                                                <td><%= user.country %></td>
                                                <td><%= user.gender %></td>

                                                
                                            </tr>
                                         
                                        <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <h1>No users to show</h1>

                                    <% } %>
                        </div>
                    </section>
            </main>
    </div>
    <script src="/js/Admin.js"></script>
</body>

</html>